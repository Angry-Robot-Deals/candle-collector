# Copy to .env and fill with your values. Never commit .env or .env.production.

# PostgreSQL (required)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DATABASE?schema=public
SHADOW_DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DATABASE_shadow?schema=public

# API
API_PORT=14444

# Feature flags for background jobs
ENABLE_TOP_COIN_FETCH=true
ENABLE_CANDLE_D1_FETCH=true
ENABLE_ATHL_CALCULATION=true
# Comma-separated exchange names; if set, ONLY these exchanges fetch candles/markets (add mexc to include MEXC)
DAY_CANDLE_FETCH_EXCHANGES=binance,okx,poloniex,htx,bybit,mexc
HOUR_CANDLE_FETCH_EXCHANGES=binance,okx,poloniex,htx,bybit,mexc
M15_CANDLE_FETCH_EXCHANGES=binance,okx,poloniex,htx,bybit,mexc
FETCH_EXCHANGES=binance,okx,poloniex,htx,bybit,mexc

# Deploy script only (optional): server SSH and env file to copy
APP_SERVER_USER=user@your-server.example.com
APP_SERVER_SSH_KEY=~/.ssh/your_key
