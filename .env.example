# Copy to .env and fill with your values. Never commit .env or .env.production.

# PostgreSQL (required). From Docker to host DB use host.docker.internal (no leading "2")
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DATABASE?schema=public
SHADOW_DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DATABASE_shadow?schema=public

# API
API_PORT=14444

# When true, update top-coins table from CoinMarketCap once per day (DEV-0003)
ENABLE_UPDATE_TOP_COIN_FROM_CMC=true
# Feature flags for background jobs
ENABLE_TOP_COIN_FETCH=true
ENABLE_CANDLE_D1_FETCH=true
ENABLE_ATHL_CALCULATION=true
# Comma-separated exchange names; if set, ONLY these exchanges fetch candles/markets
# Available: binance, okx, poloniex, htx, bybit, mexc, gateio, kucoin, bitget
DAY_CANDLE_FETCH_EXCHANGES=binance,okx,poloniex,htx,bybit,mexc,bitget
HOUR_CANDLE_FETCH_EXCHANGES=binance,okx,poloniex,htx,bybit,mexc,bitget
M15_CANDLE_FETCH_EXCHANGES=binance,okx,poloniex,htx,bybit,mexc,bitget
FETCH_EXCHANGES=binance,okx,poloniex,htx,bybit,mexc,bitget
# Max exchanges to fetch D1/H1/M15 in parallel (default 2). Lower = less CPU, higher = faster cycles.
# FETCH_CONCURRENT_EXCHANGES=2

# Deploy script only (optional): server SSH and env file to copy
# Production target: root@23.88.34.218 (DB server; API + feeder in Docker, DB local)
APP_SERVER_USER=root@23.88.34.218
APP_SERVER_SSH_KEY=~/.ssh/id_ed25519

