{
  "name": "candles",
  "version": "0.3.0",
  "description": "Fetch candles from crypto exchanges and store them in a database",
  "author": "Pavel Valentov",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "prebuild": "npx prisma generate",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=development TZ='UTC' nest start",
    "start:dev": "NODE_ENV=development TZ='UTC' nest start --watch",
    "start:debug": "NODE_ENV=development TZ='UTC' nest start --debug --watch",
    "start:prod": "NODE_ENV=production TZ='UTC' node dist/src/main",
    "deploy": "bash scripts/external-deploy.sh",
    "down": "bash scripts/external-app-down.sh",
    "seed": "ts-node prisma/seed.ts",
    "init": "npx prisma migrate dev --name init",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.15",
    "@nestjs/core": "^10.4.15",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/schematics": "^10.2.3",
    "@prisma/client": "^6.3.1",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "ccxt": "^4.4.59",
    "dotenv": "^16.4.7",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "supabase": "^2.1.1",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/testing": "^10.4.15",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.5.1",
    "prisma": "^6.3.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
