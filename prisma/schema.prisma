generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model TopCoin {
  id        Int      @id @default(autoincrement())
  coin      String   @unique
  name      String
  logo      String?
  price     Float    @default(0)
  volume24  Float    @default(0)
  cost24    Float    @default(0)
  volumeCap Float    @default(0)
  costCap   Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Symbol {
  id       Int      @id @default(autoincrement())
  name     String   @unique
  disabled Boolean  @default(false)
  Candle   Candle[]
  Market   Market[]
}

model Exchange {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  apiUri     String?
  candlesUri String?
  disabled   Boolean  @default(false)
  priority   Int      @default(999)
  Candle     Candle[]
  Market     Market[]
}

model Market {
  id          Int     @id @default(autoincrement())
  symbolId    Int
  exchangeId  Int
  synonym     String
  description String?
  disabled    Boolean @default(false)
  priority    Int     @default(0)

  symbol   Symbol   @relation(fields: [symbolId], references: [id]) // добавлен внешний ключ для Symbol
  exchange Exchange @relation(fields: [exchangeId], references: [id]) // добавлен внешний ключ для Exchange

  @@unique([symbolId, synonym, exchangeId])
  @@unique([symbolId, exchangeId])
  @@index([synonym, exchangeId])
}

model Candle {
  id         Int      @id @default(autoincrement())
  symbolId   Int // добавлено поле symbolId
  exchangeId Int // добавлено поле exchangeId
  timeframe  String
  time       DateTime
  open       Float
  high       Float
  low        Float
  close      Float
  volume     Float
  trades     Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  symbol   Symbol   @relation(fields: [symbolId], references: [id]) // добавлен внешний ключ для Symbol
  exchange Exchange @relation(fields: [exchangeId], references: [id]) // добавлен внешний ключ для Exchange

  @@unique([symbolId, exchangeId, timeframe, time]) // изменен индекс
  @@index([symbolId, exchangeId, timeframe]) // изменен индекс
  @@index([symbolId, exchangeId]) // изменен индекс
}
