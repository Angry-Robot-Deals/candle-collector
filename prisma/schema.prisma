generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model TopCoin {
  id          Int       @id @default(autoincrement())
  coin        String    @unique
  name        String
  logo        String?
  price       Float     @default(0)
  volume24    Float     @default(0)
  cost24      Float     @default(0)
  volumeCap   Float     @default(0)
  costCap     Float     @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Symbol {
  id          Int     @id @default(autoincrement())
  symbol      String  @unique
  description String?
}

model Market {
  id          Int     @id @default(autoincrement())
  symbol      String
  synonym     String
  exchange    String
  description String?

  @@index([symbol, exchange])
  @@index([synonym, exchange])
  @@unique([symbol, synonym, exchange])
}

model Exchange {
  id   Int     @id @default(autoincrement())
  name String  @unique
  api  String?
}

model Candle {
  id        Int      @id @default(autoincrement())
  symbol    String
  exchange  String
  timeframe String
  time      DateTime
  open      Float
  high      Float
  low       Float
  close     Float
  volume    Float
  trades    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([symbol, exchange, timeframe, time])
  @@index([symbol, exchange, timeframe])
  @@index([symbol, exchange])
}
