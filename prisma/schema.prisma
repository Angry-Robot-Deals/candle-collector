generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model TopCoin {
  id        Int      @id @default(autoincrement())
  coin      String   @unique
  name      String
  logo      String?
  price     Float    @default(0)
  volume24  Float    @default(0)
  cost24    Float    @default(0)
  volumeCap Float    @default(0)
  costCap   Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Symbol {
  id           Int            @id @default(autoincrement())
  name         String         @unique
  disabled     Boolean        @default(false)
  ATHL         ATHL[]
  Candle       Candle[]
  CandleD1     CandleD1[]
  ExportCandle ExportCandle[]
  Market       Market[]
}

model Exchange {
  id           Int            @id @default(autoincrement())
  name         String         @unique
  apiUri       String?
  candlesUri   String?
  disabled     Boolean        @default(false)
  priority     Int            @default(999)
  ATHL         ATHL[]
  Candle       Candle[]
  CandleD1     CandleD1[]
  ExportCandle ExportCandle[]
  Market       Market[]
}

model Market {
  id          Int      @id @default(autoincrement())
  symbolId    Int
  exchangeId  Int
  synonym     String
  description String?
  disabled    Boolean  @default(false)
  priority    Int      @default(0)
  exchange    Exchange @relation(fields: [exchangeId], references: [id])
  symbol      Symbol   @relation(fields: [symbolId], references: [id])

  @@unique([symbolId, synonym, exchangeId])
  @@unique([symbolId, exchangeId])
  @@index([synonym, exchangeId])
}

model Candle {
  id         Int      @id @default(autoincrement())
  symbolId   Int
  exchangeId Int
  time       DateTime
  open       Float
  high       Float
  low        Float
  close      Float
  volume     Float
  trades     Int      @default(0)
  tf         Int      @default(1)
  exchange   Exchange @relation(fields: [exchangeId], references: [id])
  symbol     Symbol   @relation(fields: [symbolId], references: [id])

  @@unique([symbolId, exchangeId, tf, time])
  @@index([symbolId, exchangeId, tf])
  @@index([symbolId, exchangeId])
  @@index([time])
}

model ExportCandle {
  id         Int      @id @default(autoincrement())
  symbolId   Int
  exchangeId Int
  tf         Int
  time       DateTime
  till       DateTime
  exchange   Exchange @relation(fields: [exchangeId], references: [id])
  symbol     Symbol   @relation(fields: [symbolId], references: [id])

  @@unique([symbolId, exchangeId, tf, time])
  @@index([symbolId, exchangeId, tf])
  @@index([symbolId, exchangeId])
  @@index([time])
}

model CandleD1 {
  id         Int      @id @default(autoincrement())
  symbolId   Int
  exchangeId Int
  tf         Int      @default(1440)
  time       DateTime
  open       Float
  high       Float
  low        Float
  close      Float
  volume     Float
  trades     Int      @default(0)
  exchange   Exchange @relation(fields: [exchangeId], references: [id])
  symbol     Symbol   @relation(fields: [symbolId], references: [id])

  @@unique([symbolId, exchangeId, tf, time])
  @@index([symbolId, exchangeId, tf])
  @@index([symbolId, exchangeId])
}

model ATHL {
  id          Int      @id @default(autoincrement())
  symbolId    Int
  exchangeId  Int
  high        Float
  low         Float
  quantile236 Float    @default(0)
  quantile382 Float    @default(0)
  quantile50  Float    @default(0)
  quantile618 Float    @default(0)
  quantile786 Float    @default(0)
  start       Float
  close       Float
  index       Float    @default(0)
  position    Float    @default(0)
  ath         Float    @default(0)
  closeTime   DateTime @default(now())
  highTime    DateTime @default(now())
  lowTime     DateTime @default(now())
  startTime   DateTime @default(now())
  exchange    Exchange @relation(fields: [exchangeId], references: [id])
  symbol      Symbol   @relation(fields: [symbolId], references: [id])

  @@unique([symbolId, exchangeId])
}
