generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model TopCoin {
  id        Int      @id @default(autoincrement())
  coin      String   @unique
  name      String
  logo      String?
  price     Float    @default(0)
  volume24  Float    @default(0)
  cost24    Float    @default(0)
  volumeCap Float    @default(0)
  costCap   Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Symbol {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  disabled    Boolean  @default(false)
  Candle      Candle[]
  CandleD1    CandleD1[]
  Market      Market[]
  ATHL        ATHL[]
}

model Exchange {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  apiUri      String?
  candlesUri  String?
  disabled    Boolean  @default(false)
  priority    Int      @default(999)
  Candle      Candle[]
  CandleD1    CandleD1[]
  Market      Market[]
  ATHL        ATHL[]
}

model Market {
  id          Int      @id @default(autoincrement())
  symbolId    Int
  exchangeId  Int
  synonym     String
  description String?
  disabled    Boolean  @default(false)
  priority    Int      @default(0)
  exchange    Exchange @relation(fields: [exchangeId], references: [id])
  symbol      Symbol   @relation(fields: [symbolId], references: [id])

  @@unique([symbolId, synonym, exchangeId])
  @@unique([symbolId, exchangeId])
  @@index([synonym, exchangeId])
}

model Candle {
  id         Int      @id @default(autoincrement())
  symbolId   Int
  exchangeId Int
  timeframe  String
  time       DateTime
  open       Float
  high       Float
  low        Float
  close      Float
  volume     Float
  trades     Int      @default(0)
  exchange   Exchange @relation(fields: [exchangeId], references: [id])
  symbol     Symbol   @relation(fields: [symbolId], references: [id])

  @@unique([symbolId, exchangeId, timeframe, time])
  @@index([symbolId, exchangeId, timeframe])
  @@index([symbolId, exchangeId])
}

model CandleD1 {
  id         Int      @id @default(autoincrement())
  symbolId   Int
  exchangeId Int
  timeframe  String
  time       DateTime
  open       Float
  high       Float
  low        Float
  close      Float
  volume     Float
  trades     Int      @default(0)
  exchange   Exchange @relation(fields: [exchangeId], references: [id])
  symbol     Symbol   @relation(fields: [symbolId], references: [id])

  @@unique([symbolId, exchangeId, timeframe, time])
  @@index([symbolId, exchangeId, timeframe])
  @@index([symbolId, exchangeId])
}

model ATHL {
  id          Int      @id @default(autoincrement())
  symbolId    Int
  exchangeId  Int
  high        Float
  low         Float
  start       Float // start price
  close       Float // close current price
  exchange    Exchange @relation(fields: [exchangeId], references: [id])
  symbol      Symbol   @relation(fields: [symbolId], references: [id])

  @@unique([symbolId, exchangeId])
}
